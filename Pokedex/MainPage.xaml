<Page
    x:Class="Pokedex.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pokedex"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Pokedex.Models"
    Loaded="Page_Loaded"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="#FFE8E8E8">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
       
       
        
        
        <!--top menu-->
        <RelativePanel Background="#FF4EA095" Grid.Column="1">
            <Button Name="MenuButton" 
                    RelativePanel.AlignLeftWithPanel="True" 
                    FontFamily="Segoe MDL2 Assets" 
                    FontSize="30" 
                    Content="&#xE700;" 
                    Click="MenuButton_Click"/>
            
            
            <Button Name="BackArrow" 
                    RelativePanel.RightOf="MenuButton" 
                    FontFamily="Segoe MDL2 Assets" 
                    Content="&#xE0C4;" 
                    FontSize="30" 
                    Margin="15,0,0,0"/>
            
            
            <TextBlock Name="TitlePage" 
                       RelativePanel.RightOf="BackArrow" 
                       Text="Pokedéx" 
                       FontSize="30" 
                       Margin="35,0,0,0" 
                       FontWeight="Bold"/>
            
            <AutoSuggestBox Name="AutoSuggestBox"
                            QueryIcon="Find"
                            PlaceholderText="Search"
                            RelativePanel.AlignRightWithPanel="True"
                            Width="200"
                            Margin="0,5,10,0"/>
        </RelativePanel>
        <RelativePanel Grid.Row="1"
            >
            <Button Name="ByNumberButton" Height="34" Foreground="Black" RelativePanel.AlignHorizontalCenterWithPanel="True">BY #</Button>
            <Button Name="ByNameButton" Height="34" Foreground="Black" RelativePanel.RightOf="ByNumberButton">BY NAME</Button>
            <Button Name="ByTypeButton" Height="34" Foreground="Black" RelativePanel.RightOf="ByNameButton">BY TYPE</Button>
            
        </RelativePanel>

            <SplitView Grid.Row="2"
                   Name="SplitMenu"
                   DisplayMode="Overlay"
                   OpenPaneLength="150" Background="White"
                   >
            <SplitView.Pane>
                <ListBox Background="#FF419380">
                    <ListBoxItem Name="Register">
                        <TextBlock FontSize="24">Registrar</TextBlock>
                    </ListBoxItem>
                </ListBox>
            </SplitView.Pane>

            <SplitView.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="30"/>                        
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ListView Name="PokeListViewMain" 
                              ItemsSource="{x:Bind Pokedex}"
                              Grid.Row="1"
                              Grid.Column="0">
                        
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="data:NamedAPIResource">
                                <StackPanel Orientation="Horizontal">

                                    

                                    <TextBlock Text="{x:Bind name}"
                                               Margin="5 0 10 5"
                                               VerticalAlignment="Center"
                                               FontSize="18"
                                               Foreground="Black"/>
                                    <!--<TextBlock Text="{x:Bind url}"
                                               Margin="5 0 10 5"
                                               VerticalAlignment="Center"
                                               FontSize="12"
                                               Foreground="Black"/>-->
                       
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    

                </Grid>
            </SplitView.Content>
        </SplitView>

        <ProgressRing x:Name="ProgressRing"
                      Width="50"
                      Height="50"
                      Foreground="BlueViolet"
                      Grid.ColumnSpan="2"
                      Grid.RowSpan="3"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"            
            />

    </Grid>
</Page>
